@model IEnumerable<SmartTraining.Business.DTO.Courses.CourseDto>

@{
    ViewBag.Title = "Courses";
}

<h2>@Html.ViewBag.Title</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    @* <button type="button" class="btn btn-primary">Primary</button> *@
    <button type="button" onclick="location.href= '@Url.Action("Create", "Courses")'" class="btn btn-primary">Add New</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            <button type="button" onclick="location.href= '@Url.Action("Edit", "Courses", new { id=item.Id })'" class="btn btn-success">Edit</button>
            <button type="button" onclick="location.href= '@Url.Action("Course", "Courses", new { id=item.Id })'" class="btn btn-info">Details</button>
            <button type="button" onclick="location.href= '@Url.Action("Delete", "Courses", new { id=item.Id })'" class="btn btn-danger">Delete</button>
        </td>
    </tr>
}

</table>
